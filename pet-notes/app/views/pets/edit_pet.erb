<form action="/pets/<%= @pet.id %>"  method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <div class="mb-3">
        <h2>Overview</h2>
        <label for="name" class="form-label"><strong>Name</strong></label>
        <input type="name" name="name" value="<%= @pet.name %>" class="form-control" id="name">
    </div>

    <div class="mb-3">
        <label for="type" class="form-label"><strong>Type</strong></label>
        <input type="breed" placeholder="e.g. cat, dog, bird" name="breed" value="<%= @pet.breed%>" class="form-control" id="breed">
    </div>

    <div class="mb-3">
        <h2>Info</h2>
        <label for="nutrition" class="form-label"><strong>What do you feed your pet?</strong></label>
        <input type="nutrition" name="nutrition" value="<%= @pet.nutrition%>" class="form-control" id="nutrition">
    </div>

    <div class="mb-3">
        <label for="feedings" class="form-label"><strong>How often do you feed your pet?</strong></label>
        <input type="feedings" placeholder="e.g. 2x/day, 3x/week" name="feedings" value="<%= @pet.feedings%>" class="form-control" id="feedings">
    </div>

    <div class="mb-3">
        <h2 class="mb-0">Notes</h2>
        <label for="notes" class="form-label"></label>
        <textarea class="form-control" rows="4" name="notes" class="form-control" id="notes"><%= @pet.notes%></textarea>
    </div>

    <div class="button-container">
        <button type="update" value="update" id="update" class="button btn-lg btn-primary">Update</button>
    </div>
</form>
